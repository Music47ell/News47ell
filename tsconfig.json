{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5", "dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/api/*": ["api/*"],
			"@/app/*": ["app/*"],
			"@/assets/*": ["assets/*"],
			"@/components/*": ["components/*"],
			"@/configs/*": ["configs/*"],
			"@/context/*": ["context/*"],
			"@/data/*": ["data/*"],
			"@/helpers/*": ["helpers/*"],
			"@/hooks/*": ["hooks/*"],
			"@/layouts/*": ["layouts/*"],
			"@/lib/*": ["lib/*"],
			"@/utils/*": ["utils/*"],
			"@/contentlayer/generated": ["./.contentlayer/generated"]
		},
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": true
	},
	"include": [
		"next-env.d.ts",
		"additional.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".contentlayer/generated",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
