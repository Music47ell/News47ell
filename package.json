{
	"name": "news47ell",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"build": "next build && cross-env NODE_OPTIONS='--experimental-json-modules' node -r esbuild-register ./scripts/post-build.mjs",
		"start": "next start",
		"analyze": "cross-env ANALYZE=true next build",
		"count": "cloc --exclude-ext=svg,css,json,xml --exclude-dir=node_modules,.next --vcs=git --json . > data/count_total.json",
		"pre-commit": "npx --no-install lint-staged && npm run count && git add data/count_total.json",
		"prepare": "husky install",
		"update": "npx npm-check-updates --format group --interactive",
		"find:unused": "npx next-unused",
		"find:depcheck": "npx depcheck"
	},
